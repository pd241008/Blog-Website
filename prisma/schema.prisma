generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model BlogPost {
  id          String   @id @default(uuid())
  title       String
  content     String
  imageUrl    String
  aurthodrId  String
  authoName   String
  authorImage String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
